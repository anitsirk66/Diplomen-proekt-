@using BookstoreWebApp.Models.User;
@model UserCreateAdminViewModel

<h1>Register</h1>
<form asp-action="CreateAdmin" method="post">
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Username</label>
        <input asp-for="UserName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Role</label>
        @Html.DropDownListFor(x => x.Role, Model.RolesList, "Select", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Register as admin</button>
</form>

